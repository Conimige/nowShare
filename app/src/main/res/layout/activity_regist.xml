<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nowshare.myzchh.cn.nowshare.RegistActivity"
    android:background="#ffffffff">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:gravity="center"
        android:hint="用户名"
        android:ems="10"
        android:id="@+id/textbox_user"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:hint="密码"
        android:id="@+id/textbox_password"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/textbox_user"
        android:layout_alignLeft="@+id/textbox_user"
        android:layout_alignStart="@+id/textbox_user" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:hint="确认密码"
        android:id="@+id/textbox_password2"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/textbox_password"
        android:layout_alignLeft="@+id/textbox_password"
        android:layout_alignStart="@+id/textbox_password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="出生日期"
        android:id="@+id/button"
        android:background="@drawable/p_textbox_bkg"
        android:textColor="@color/hint_foreground_material_light"
        android:textSize="16sp"
        android:layout_below="@+id/textbox_password2"
        android:layout_alignLeft="@+id/textbox_password2"
        android:layout_alignStart="@+id/textbox_password2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册到乐享"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#ff000000"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:gravity="center"
        android:hint="昵称"
        android:id="@+id/editText"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:gravity="center"
        android:hint="邮箱"
        android:id="@+id/editText3"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="phone"
        android:ems="10"
        android:gravity="center"
        android:hint="电话号码"
        android:id="@+id/editText2"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:layout_marginTop="5dp">

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="男"
            android:id="@+id/radioButton" />

        <RadioButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="女"
            android:id="@+id/radioButton2" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别："
        android:id="@+id/textView4"
        android:textSize="16sp"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="10dp" />

</RelativeLayout>
