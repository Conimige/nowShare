<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nowshare.myzchh.cn.nowshare.RegistActivity"
    android:background="#ffffffff">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:id="@+id/imageView6"
        android:background="@drawable/p_regist_title_bkg"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:gravity="center"
        android:hint="用户名"
        android:ems="10"
        android:id="@+id/textbox_user"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:hint="密码"
        android:id="@+id/textbox_password"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/textbox_user"
        android:layout_alignLeft="@+id/textbox_user"
        android:layout_alignStart="@+id/textbox_user"
        android:layout_alignRight="@+id/textbox_user"
        android:layout_alignEnd="@+id/textbox_user"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPassword"
        android:ems="10"
        android:gravity="center"
        android:hint="确认密码"
        android:id="@+id/textbox_password2"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/textbox_password"
        android:layout_alignLeft="@+id/textbox_password"
        android:layout_alignStart="@+id/textbox_password"
        android:layout_alignRight="@+id/textbox_password"
        android:layout_alignEnd="@+id/textbox_password"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="出生日期"
        android:id="@+id/textbox_birthday"
        android:background="@drawable/p_textbox_bkg"
        android:textColor="@color/hint_foreground_material_light"
        android:textSize="16sp"
        android:layout_below="@+id/textbox_password2"
        android:layout_alignLeft="@+id/textbox_password2"
        android:layout_alignStart="@+id/textbox_password2"
        android:layout_alignRight="@+id/textbox_password2"
        android:layout_alignEnd="@+id/textbox_password2"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册到乐享"
        android:id="@+id/textView3"
        android:textSize="22sp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:gravity="center"
        android:hint="昵称"
        android:id="@+id/textbox_nickname"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/textbox_birthday"
        android:layout_alignLeft="@+id/textbox_birthday"
        android:layout_alignStart="@+id/textbox_birthday"
        android:layout_alignRight="@+id/textbox_birthday"
        android:layout_alignEnd="@+id/textbox_birthday"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:gravity="center"
        android:hint="邮箱"
        android:id="@+id/text_mail"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/textbox_nickname"
        android:layout_alignLeft="@+id/textbox_nickname"
        android:layout_alignStart="@+id/textbox_nickname"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:inputType="phone"
        android:ems="10"
        android:gravity="center"
        android:hint="电话号码"
        android:id="@+id/text_phone"
        android:background="@drawable/p_textbox_bkg"
        android:textSize="16sp"
        android:clickable="true"
        android:layout_below="@+id/text_mail"
        android:layout_alignLeft="@+id/text_mail"
        android:layout_alignStart="@+id/text_mail"
        android:layout_alignRight="@+id/text_mail"
        android:layout_alignEnd="@+id/text_mail"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textbox_nickname"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/textbox_nickname"
        android:layout_alignEnd="@+id/textbox_nickname"
        android:id="@+id/linearLayout">
        <RadioGroup
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/genderGroup">
            <RadioButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="男"
                android:id="@+id/radio_men"
                android:checked="true"
                android:layout_marginLeft="20dp" />

            <RadioButton
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="女"
                android:id="@+id/radio_women" />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别："
        android:id="@+id/lb_gender"
        android:textSize="16sp"
        android:layout_below="@+id/textbox_nickname"
        android:layout_alignLeft="@+id/textbox_nickname"
        android:layout_alignStart="@+id/textbox_nickname"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button_login"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_login"
        android:clickable="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/button_login_shadow"
        android:background="@drawable/btn_login_shadow"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:id="@+id/button_Back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_back"
        android:layout_marginTop="19dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您需要填写以下信息来完成注册："
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView6"
        android:layout_alignLeft="@+id/textbox_user"
        android:layout_alignStart="@+id/textbox_user" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_registing"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#980051ff"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
