<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nowshare.myzchh.cn.nowshare.MainActivity"
    android:background="#ffededed">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"


        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="10dp"
        android:scrollbarStyle="outsideOverlay"
        tools:listitem="@layout/listviewitem_main"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffededed"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:id="@+id/Title_bkg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/p_title_bkg"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:id="@+id/title_Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:clickable="true"
        android:textSize="22sp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="18dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_Menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_menu"
        android:clickable="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="-30dp"
        android:alpha="0.5" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_add_shadow"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_add_shadow"
        android:alpha="1" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/btn_add"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_add"
        android:alpha="0.5"
        android:clickable="true"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_add_tip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_add_noshadow"
        android:alpha="1"
        android:clickable="false"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:id="@+id/newBox"
        android:visibility="visible"
        android:gravity="bottom"
        android:background="#64000000">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/btn_publish"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_publish"
            android:alpha="1"
            android:clickable="true" />

        <ImageView
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:id="@+id/imageView3"
            android:background="@drawable/p_add_bkg"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="50dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="188dp"
            android:inputType="textMultiLine"
            android:hint="在此输入内容"
            android:gravity="top"
            android:ems="10"
            android:id="@+id/edit_newBox"
            android:layout_alignTop="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="88dp"
            android:background="#ffffffff"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageView5"
            android:background="@drawable/btn_camera"
            android:alpha="0.5"
            android:layout_alignBottom="@+id/edit_newBox"
            android:layout_alignRight="@+id/edit_newBox"
            android:layout_alignEnd="@+id/edit_newBox"
            android:layout_marginBottom="-35dp"
            android:layout_marginRight="-5dp" />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登陆中..."
        android:id="@+id/text_status"
        android:layout_alignBottom="@+id/title_Name"
        android:layout_toRightOf="@+id/title_Name"
        android:layout_toEndOf="@+id/title_Name"
        android:textSize="10sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="3dp"
        android:textColor="#5a000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/menu_bkg"
        android:visibility="gone"
        android:clickable="true">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/image_menu_shadow"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#64000000"
            android:layout_marginTop="78dp" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/menu_box"
            android:visibility="visible"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#ffffffff"
                android:clickable="true"
                android:id="@+id/menu_rightbox"
                android:visibility="visible"
                android:layout_marginTop="78dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/image_face"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/face_default"
                    android:layout_marginTop="50dp" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:id="@+id/text_Name"
                            android:layout_gravity="center_horizontal"
                            android:textSize="16sp"
                            android:textColor="#ff000000"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lv.1"
                            android:id="@+id/text_level"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/text_Name"
                            android:layout_toEndOf="@+id/text_Name"
                            android:textStyle="italic"
                            android:typeface="serif"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="#46000000" />

                    </LinearLayout>
                </RelativeLayout>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="34dp"
                    android:text="签到"
                    android:id="@+id/btn_sign"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_qiandao"
                    android:textColor="#ffed7d31"
                    android:layout_marginTop="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#14000000"
                    android:layout_marginTop="40dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="消息"
                        android:id="@+id/btn_message"
                        android:layout_gravity="center_horizontal"
                        android:background="#ffffffff"
                        android:layout_marginTop="1dp"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="好友"
                        android:id="@+id/btn_friends"
                        android:layout_gravity="center_horizontal"
                        android:background="#ffffffff"
                        android:layout_marginTop="1dp"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="设置"
                        android:id="@+id/btn_setting"
                        android:layout_gravity="center_horizontal"
                        android:background="#ffffffff"
                        android:layout_marginTop="1dp"
                        android:textSize="16sp" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="退出乐享"
                        android:id="@+id/btn_exit"
                        android:layout_gravity="center_horizontal"
                        android:background="#ffffffff"
                        android:layout_marginTop="1dp"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:id="@+id/imageView10" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
